<!DOCTYPE html>
<html>
<head>
  <title>Whose Headline?</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <!-- <link href='http://fonts.googleapis.com/css?family=Bevan' rel='stylesheet' type='text/css'> -->
  <link href='http://fonts.googleapis.com/css?family=Special+Elite' rel='stylesheet' type='text/css'>
</head>
<script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-22922584-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
</script>
<body>

<header class="container_12">
  <div class="grid_6">
    <h2>Whose Headline?</h2>
    <p><%= link_to 'Play new game', new_play_path %></p>
  </div>
  <div class="grid_6" id="user_nav">
    <% if current_user %>
      Signed in as
      <%= link_to current_user.twitter_name, current_user %> |
      <%= link_to "Sign Out", signout_path %>
      <br />
      Total score
      <%= current_user.plays.where(:won => true).count %> out of
      <%= current_user.plays.count %>
    <% else %>
      <%= link_to "Sign in with Twitter", "/auth/twitter" %>
    <% end %>
  </div>
  <div class="clearfix"></div>
</header>

<div class="container_12" id="mainContent">
  <% if notice %>
    <div class="grid_12">
      <div id="notice"><%= notice %></div>
    </div>
  <% end %>
  <%= yield %>
  <div class="clearfix"></div>
</div>

</body>
</html>
